{
  "env": {
      "es2021": true,
      "node": true
  },
  "extends": [
      "airbnb-base"
  ],
  "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always"
      }
    ],
    "no-console": "off",
    "consistent-return": "off", // Optional for flexibility in Express routes
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }], // Ignore 'next' in middleware
    "import/no-extraneous-dependencies": "off",
    "no-underscore-dangle": "off"
  }
}
